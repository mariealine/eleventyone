<section>
  <a id="projects" class="anchor"><h2>Projects</h2></a>

  <ul>
    {% for project in projects %}
      {% if project.featured %}
        <li>
          <h3>
            {% if project.url %}
              <a href="{{ project.url }}">{{ project.name }}</a>
              {% else %}
              {{ project.name }}
            {% endif %}
          </h3>
          <h4>{{ project.role }}</h4>
          <p>{{ project.introduction }}</p>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

