<section>
  <a id="communities" class="anchor" href="#communities">
    <h2>Communities</h2>
  </a>

  <p>I love to connect people and share knowledge and experiences. A friend, said one day about me, that I must have been a sheepdog in another life.</p>

  {% for community in communities %}
  <h3>
    <a itemscope itemtype="http://schema.org/WebSite" href="{{ community.url }}" target="_blank">{{ community.name }}
      <meta itemprop="name" content="{{ community.name }}"/>
      <meta itemprop="url" content="{{ community.url }}"/>
      <span itemscope itemtype="http://schema.org/Organization">
        <meta itemprop="name" content="{{ community.name }}"/>
        <link itemprop="url" href="{{ community.url }}"/>
        <link itemprop="sameAs" href="{{ community.sameAs }}">
      </span>
    </a>
  </h3>
  <ul>
    <li>Status:
    {{ community.status }}</li>
    <li>Created:
    {{ community.since }}</li>
    <li>Size: ~{{ community.size }}
      {{ community.members }}
      <small>({{ page.date | dateDisplay }})</small>
    </li>
  </ul>
  {% endfor %}

</section>
